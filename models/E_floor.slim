/*
	E_floor.slim
	
	This exercises Eidos function floor(float x)
*/

initialize() { }
1 early() {
	x = runif(10000000, -100, 100);
	o = floor(x);	// we only do a consistency check
	
	for (i in 1:3000)
		y = floor(x);
	
	// test only the last one, to avoid overhead
	if (identical(o, y))
		catn("### CORRECT ###");
	else
		catn("### *** INCORRECT *** ###");
}

