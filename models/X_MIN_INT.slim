/*
	This exercises Eidos function min(integer x)
*/

initialize() { }
1 early() {
	y = rdunif(10000000, -1000000000, 1000000000);
	
	start = clock("mono");
	x = sapply(1:3000, "min(y);");
	catn("// ********** Benchmark time: " + (clock("mono") - start));
	
	// summarize results
	first_x = x[0];
	all_equal = all(x == first_x);
	if (all_equal)
		catn("### ALL " + first_x + " (" + length(x) + ") ###");
	else
		catn("### *** INCONSISTENT *** " + mean(x) + " (" + length(x) + ") *** ###");
}
