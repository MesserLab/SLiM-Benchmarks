/*
	V_match_float.slim
	
	This exercises Eidos function match(float x, float table)
*/

initialize() { }
1 early() {
	table = sample((1:10000) * 17.033, 1000, replace=F);
	pos = rdunif(10000000, min=0, max=999);
	x = table[pos];
	
	for (i in 1:100)
		y = match(x, table);
	
	// test only the last one, to avoid overhead
	if (identical(pos, y))
		catn("### CORRECT ###");
	else
		catn("### *** INCORRECT *** ###");
}
