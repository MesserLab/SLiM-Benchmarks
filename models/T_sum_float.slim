/*
	T_sum_float.slim
	
	This exercises Eidos function sum(float x)
*/

initialize() { }
1 early() {
	y = 1.0:1000000;
	x = sapply(1:10000, "sum(y);");
	
	// summarize results
	first_x = x[0];
	all_equal = all(x == first_x);
	if (all_equal)
		catn("### ALL " + first_x + " (" + length(x) + ") ###");
	else
		catn("### *** INCONSISTENT *** " + mean(x) + " (" + length(x) + ") *** ###");
}

