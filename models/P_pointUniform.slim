/*
	P_pointUniform.slim
	
	This exercises the Subpopulation method pointUniform()
*/

initialize() {
	initializeSLiMOptions(dimensionality="xy");
}
1 late() {
	sim.addSubpop("p1", 100);
	p1.setSpatialBounds(c(0, 0, 100, 100));
	
	start = clock("mono");
	for (i in 1:200) p1.pointUniform(10000000);
	catn("TEST TIME: " + (clock("mono") - start));
}
