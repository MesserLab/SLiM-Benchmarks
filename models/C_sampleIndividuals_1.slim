/*
	C_sampleIndividuals_1.slim
	
	This exercises the Subpopulation method sampleIndividuals(),
	in the case where few constraints are given
*/

initialize() {
	initializeSLiMOptions(keepPedigrees=T);
}
1 early() {
	sim.addSubpop("p1", 1000000);
	inds = p1.individuals;
	minID = min(inds.pedigreeID);
	maxID = max(inds.pedigreeID);
	
	for (i in 1:1500) p1.sampleIndividuals(1000000, replace=T);
	
	// summarize results
	catn("### NO SUMMARY ###");
}
