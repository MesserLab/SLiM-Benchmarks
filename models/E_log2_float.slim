/*
	E_log2_float.slim
	
	This exercises Eidos function log2(float x)
*/

initialize() { }
1 early() {
	o = runif(10000000, -100, 100);
	x = 2 ^ o;
	
	for (i in 1:150)
		y = log2(x);
	
	// test only the last one, to avoid overhead
	if (all(abs(o - y) < 1e-13))
		catn("### CORRECT ###");
	else
		catn("### *** INCORRECT *** ###");
}

