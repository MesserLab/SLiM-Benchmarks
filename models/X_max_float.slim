/*
	X_max_float.slim
	
	This exercises Eidos function max(float x)
*/

initialize() { }
1 early() {
	y = runif(10000000, -1000000000, 1000000000);
	
	start = clock("mono");
	x = sapply(1:1500, "max(y);");
	catn("TEST TIME: " + (clock("mono") - start));
	
	// summarize results
	first_x = x[0];
	all_equal = all(x == first_x);
	if (all_equal)
		catn("### ALL " + first_x + " (" + length(x) + ") ###");
	else
		catn("### *** INCONSISTENT *** " + mean(x) + " (" + length(x) + ") *** ###");
}
