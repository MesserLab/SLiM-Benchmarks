/*
	A simple neutral WF model with lots of mutations.  This exercises
	stuff in the SLiM core like TallyMutationReferences_FAST() and
	UniqueMutationRuns(), in addition to DoCrossoverMutation().
*/

initialize() {
	initializeSLiMOptions(mutationRuns=48);
	initializeMutationRate(1e-3);
	initializeMutationType("m1", 0.5, "f", 0.0);
	initializeGenomicElementType("g1", m1, 1.0);
	initializeGenomicElement(g1, 0, 1e7-1);
	initializeRecombinationRate(1e-8);
}
1 early() { sim.addSubpop("p1", 100); }
2 early() {
	sim.chromosome.setMutationRate(1e-7);
	p1.setSubpopulationSize(100000);
}

50 late() { }
