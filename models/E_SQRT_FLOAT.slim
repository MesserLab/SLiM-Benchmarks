/*
	This exercises Eidos function sqrt(float x)
*/

initialize() { }
1 early() {
	o = runif(10000000, 0, 1000);
	x = o ^ 2;
	
	start = clock("mono");
	for (i in 1:2500)
		y = sqrt(x);
	catn("// ********** Benchmark time: " + (clock("mono") - start));
	
	// test only the last one, to avoid overhead
	if (all(abs(o - y) < 1e-13))
		catn("### CORRECT ###");
	else
		catn("### *** INCORRECT *** ###");
}

