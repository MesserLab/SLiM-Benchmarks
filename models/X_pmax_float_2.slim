/*
	X_pmax_float_2.slim
	
	This exercises Eidos function pmax(float x, float y)
*/

initialize() { }
1 early() {
	a = runif(10000000, -1000000000, 1000000000);
	b = runif(10000000, -1000000000, 1000000000);
	o = ifelse(a > b, a, b);
	
	for (i in 1:200)
		y = pmax(a, b);
	
	// test only the last one, to avoid overhead
	if (identical(o, y))
		catn("### CORRECT ###");
	else
		catn("### *** INCORRECT *** ###");
}
