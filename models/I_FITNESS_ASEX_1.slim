/*
	This exercises fitness calculations with:
		individual fitnessScaling and NO non-neutral mutations
	A nonWF model is used so we can coast without reproduction.
*/

initialize() {
	// This model uses an internal benchmark
	_startBenchmark("FITNESS_ASEX_1");
	
	initializeSLiMModelType("nonWF");
	defineConstant("K", 1000000);
}
reproduction() {
	self.active = 0;
}
1 early() {
	sim.addSubpop("p1", K);
}
early() {
	p1.individuals.fitnessScaling = 1.01;
}
500 late() {
	//catn("elapsed: " + _stopBenchmark());

	// summarize results
	catn("### NO SUMMARY ###");
}
